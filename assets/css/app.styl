@import 'lib/angular-ui'
@import 'nib'
@import '../js/bower_components/fullcalendar/fullcalendar.css'

html
  height: 100%;

body
  background-color: #f5f5f5;
  height: 100%;

.navbar button
  margin-left: 10px;

.white
  background-color: #fff;

#content 
  width: 100%;
  height: 100%;

#title 
  position: absolute;
  cursor default
  width: 100%;
  background-color: #482647;
  height: 50%
  left 0
  text-align: center
  user-select: none

  h1
    position relative
    font-family 'Cabin', sans-serif
    color white
    font-weight 200
    font-size 4em
    letter-spacing: 0.4em
    top 30%

  h2
    position relative
    font-family 'Cabin', sans-serif
    letter-spacing 0.2em
    color white
    font-size 2em
    font-weight 200
    top 40%
    margin-left 2%
    margin-right 2%

.subcontainer 
  position: absolute;
  top: 50%;
  width: 50%;
  height: 50%;

#right
  left: 50%;
  background-image: url("/img/paris.jpg");
  background-position: center;
  background-size: cover;

#left
  background-image: url("/img/newyork.png");
  background-position: center;
  background-size: cover;

.front-btn
  cursor pointer
  user-select none
  vertical-align middle
  font-size: 2em
  color white
  position absolute
  top 48%
  margin: 0 0 0 -25%
  text-align center
  display block
  min-width 5em
  width 30%
  left 50%
  line-height 30px
  padding:1em;
  border 3px solid white
  font-family 'Cabin', sans-serif
  background-color rgba(0, 0, 0, .25)
  transition background-color .25s

.front-btn:hover
  color white
  text-decoration none
  background-color rgba(0, 0, 0, .8)

.button-div
  padding-top 23px

.center
  text-align center
  margin-left auto
  margin-right auto
  float none

#tdsmall
  width 20px

.menu_icons
  float: right

.small_icon
  width: 3em

.icon_menu
  float: right
  padding-top: 0.5em
  width: 3em

.icon_menu:hover
    opacity .5

#mapHolder
  width 100%
  height 400px

.info_title
  padding-top: 30px;

.icon_type
  display: block
  height: 50%
  width: 50%
  background-position: center;
  background-size: cover;
  opacity 1
  transition opacity .25s


.icon_type:hover
  opacity .5

@keyframes fadeIn 
  from 
    opacity 0
  to
    opacity 1

#head
  animation fadeIn 1s


  #times, #location, #people
    animation fadeIn .25s ease-in

  #when
    top: 0
    position: absolute
    background-image: url("/img/when_long.png");

  #where
    position: absolute
    top: 0
    left: 50%
    background-image: url("/img/where_long.png")

  #save
    position: absolute
    top: 50%
    left: 50%
    background-image: url("/img/save_long.png")

  #who
    position: absolute
    top:50%
    background-image: url("/img/who_long.png");



.icon_title
  top: 73%
  left: 49%
  padding 1%
  margin-left -2.5em
  width 5em

ul#head 
  position: absolute
  height: 100%
  width: 100%

#tab-container
  margin-left 0px

#location
  margin-left 20px

  @media (min-width: 1200px)
    margin-left 30px

.row
 width: 90%  
